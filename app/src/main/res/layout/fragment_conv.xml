<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:useDefaultMargins="true">


        <TextView
            android:id="@+id/text_from"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginBottom="152dp"
            android:text="From"
            android:textAlignment="center"
            android:textSize="20sp"

            android:translationX="100dp"

            android:translationY="100dp"
            app:layout_constraintBottom_toTopOf="@+id/unit1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/unit_from"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="256dp"
            android:layout_marginEnd="16dp"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/unit1"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="56dp"
            android:autofillHints="Quantity"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/unit_from"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="LabelFor" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/text_to"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="88dp"
            android:text="To"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/unit2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Spinner
            android:id="@+id/unit_to"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.693" />

        <TextView
            android:id="@+id/unit2"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="84dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/unit_to" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>