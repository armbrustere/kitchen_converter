<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:useDefaultMargins="true">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_viewFrom"
            android:layout_width="350dp"
            android:layout_height="198dp"
            android:layout_marginBottom="484dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent">


            <Spinner
                android:id="@+id/unit_from"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:textColor="@android:color/holo_red_light"
                android:spinnerMode="dropdown"
                android:translationX="225dp"
                android:translationY="125dp" />

            <EditText
                android:id="@+id/amount1"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="200dp"
                android:layout_height="83dp"
                android:autofillHints="Quantity"
                android:inputType="numberDecimal"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:translationX="15dp"
                android:translationY="100dp"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/text_from"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="180dp"
                android:layout_height="64dp"
                android:text="From"
                android:textAlignment="center"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_viewTo"
            android:layout_width="350dp"
            android:layout_height="198dp"
            android:layout_marginBottom="244dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/text_to"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginBottom="444dp"
                android:text="To"
                android:textAlignment="center"
                android:textSize="20sp" />


            <Spinner
                android:id="@+id/unit_to"
                android:theme="@style/Theme.Measurement_Converter"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginEnd="32dp"
                android:translationX="225dp"
                android:translationY="125dp" />

            <TextView
                android:id="@+id/amount2"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="200dp"
                android:layout_height="83dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:translationX="15dp"
                android:translationY="100dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_fraction_buttons"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/Fraction1_4"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="1/4"
                android:translationX="10dp">

            </Button>

            <Button
                android:id="@+id/Fraction1_3"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="1/3"
                android:translationX="137.5dp">

            </Button>

            <Button
                android:id="@+id/Fraction1_2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="1/2"
                android:translationX="250dp">

            </Button>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>